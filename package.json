
{
  "name": "miniremind-pro",
  "version": "1.0.0",
  "type": "module",
  "main": "main.cjs",
  "description": "轻量级桌面定时提醒工具 - 无需登录，本地运行",
  "author": "MiniRemind Team",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "lucide-react": "^0.562.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.miniremind.app",
    "productName": "微提醒 Pro",
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.cjs",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "directories": {
      "output": "dist_electron"
    },
    "asar": true
  }
}
